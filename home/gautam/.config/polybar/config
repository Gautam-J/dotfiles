base01 = #32302F
base02 = #504945
base03 = #665C54
base04 = #928374
base05 = #a6a28c
base06 = #D5C4A1
base07 = #FDF4C1
base08 = #FB543F
base09 = #FE8625
base0A = #FAC03B
base0B = #95C085
base0C = #8BA59B
base0D = #0D6678
base0E = #8F4673
base0F = #A87322

[bar/mybar]
bottom = false
height = 30
radius = 5.0
fixed-center = true

background = ${colors.base00}
foreground = ${colors.base05}

border-top-size = 5
border-bottom-size = 0
border-right-size = 5
border-left-size = 5
border-color = #00000000

padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = monospace:size=12;3

modules-left = i3
modules-center = date
modules-right = xbacklight pulseaudio cpu memory network battery temperature

tray-position = right

[module/i3]
; TODO: Add icons
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.base00}
label-mode-background = ${colors.base0A}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 1
label-focused-foreground = ${colors.base00}
label-focused-background = ${colors.base0D}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.base05}
label-unfocused-background = ${colors.base01}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 1
label-visible-foreground = ${colors.base05}
label-visible-background = ${colors.base01}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = 1
label-urgent-foreground = ${colors.base00}
label-urgent-background = ${colors.base08}

[module/xbacklight]
type = internal/xbacklight
format = <label>
label = BR %percentage%%

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label = CPU %percentage%%

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = MEM %percentage_used%%

[module/network]
type = internal/network
interface = wlo1
interval = 3.0

format-connected = <label-connected>
label-connected = WIFI %essid%

format-disconnected = <label-disconnected>
label-disconnected = NO WIFI

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d%
time = %H:%M

format = <label>
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
interval = 5

format-volume = <label-volume>
label-volume = VOL %percentage%%
label-muted = MUTED

click-right = pavucontrol

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
time-format = %H:%M

format-charging = <label-charging>
label-charging = CH %percentage%%

format-discharging = <label-discharging>
label-discharging = DC %percentage%%

format-full = <label-full>
label-full = FULL %percentage%%

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
warn-temperature = 80

format = <label>
format-warn = <label-warn>

label = TEMP %temperature-c%
label-warn = TEMP WARN %temperature-c%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
